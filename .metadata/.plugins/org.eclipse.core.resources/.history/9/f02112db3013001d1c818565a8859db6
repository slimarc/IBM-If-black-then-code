
public class MensagemJava {

	public static void main(String[] args) {
		// criando variaveis
		String nome="Ricardo";
		int idade=23;
		
		int num1=10;
		int num2=5;
		
		//mensagens
		System.out.println("O nome do usuário é: "+ nome + " e ele tem "+idade+" anos");
		System.out.println("Vamos fazer um super desenvolvimento");
		
		//calculando variaveis
		System.out.println("O resultado da subtração entre "+num1+"-"+num2+" é igual a "+(num1-num2));
		System.out.println("O resultado da soma entre "+num1+"+"+num2+" é igual a "+(num1+num2));
		System.out.println("O resultado da multiplicação entre "+num1+"*"+num2+" é igual a "+(num1*num2));
		System.out.println("O resultado da divisão entre "+num1+"/"+num2+" é igual a "+(num1/num2));
}

}
