
public class Loja {
	public static void main(String[] args) {
		Produto p;	
		p = new Produto();
		
		p.codigo = 123;
		p.descricao = "Computador";
		p.preco = 2500.00;
		
		System.out.println("------PRODUTO------");
		System.out.println(p.codigo+":"+p.descricao);
		System.out.printf("R$ %.2f%n", p.preco);
		
	}

}
